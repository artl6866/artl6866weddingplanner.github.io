@model LoginUser
<h1>Login</h1>
<br>
<br>
<form asp-action="Login" aps-controller="Home" method="post">
    <div class="form-group col-md-6">
        <span asp-validation-for="logEmail"></span>
        <label asp-for="logEmail">Email</label>
        <input asp-for="logEmail" placeholder="Enter Email Address"/>
    </div>
    <div class="form-group col-md-6">
        <span asp-validation-for="logPassword"></span>
        <label asp-for="logPassword">Password</label>
        <input asp-for="logPassword" placeholder="Enter Password"/>
    </div>
    <div>
        <input type="submit" value="Login Now">
    </div>
</form>